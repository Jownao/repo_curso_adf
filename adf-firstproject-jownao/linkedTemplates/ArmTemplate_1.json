							},
							"waitOnCompletion": true,
							"parameters": {}
						}
					}
				],
				"policy": {
					"elapsedTimeMetric": {}
				},
				"folder": {
					"name": "adf_03_handson01"
				},
				"annotations": [],
				"lastPublishTime": "2024-06-26T16:30:56Z"
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/pipelines/pratica_03')]"
			]
		}
	]
}